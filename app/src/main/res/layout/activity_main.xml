        android:id="@+id/id_btn_FourActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="to_4Activity"
        android:text="跳转到第四个Activity"/>
    <Button
        android:id="@+id/id_btn_FiveActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="to_5Activity"
        android:text="跳转到第五个Activity"/>
    <Button
        android:id="@+id/id_btn_SixActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="to_6Activity"
        android:text="跳转到第六个Activity"/>
    <Button
        android:id="@+id/id_btn_SevenActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="to_7Activity"
        android:text="跳转到第七个Activity"/>
    <Button
        android:id="@+id/id_btn_EightActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="to_8Activity"
        android:text="跳转到第八个Activity"/>

</LinearLayout>
