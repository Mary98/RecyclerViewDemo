<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/id_btn_OneActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="to_1Activity"
        android:text="跳转到第一个Activity"/>
    <Button
        android:id="@+id/id_btn_TwoActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="to_2Activity"
        android:text="跳转到第二个Activity"/>
    <Button
        android:id="@+id/id_btn_ThreeActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="to_3Activity"
        android:text="跳转到第三个Activity"/>
